# PostgREST API endpoint for database queries
NEXT_PUBLIC_POSTGREST_URL=http://localhost:3010

# Chain configuration
NEXT_PUBLIC_CHAIN_NAME=Cosmos
NEXT_PUBLIC_CHAIN_ID=cosmoshub-4

# gRPC endpoint for the chain (used by yaci extractor)
GRPC_ENDPOINT=localhost:9090

# Prometheus metrics endpoint (optional - used if available)
# Note: Direct browser access to Prometheus is typically blocked by CORS
# Consider setting up a proxy or using the yaci metrics server instead
PROMETHEUS_ENDPOINT=http://localhost:9105

# Database connection for yaci extractor
DATABASE_URL=postgres://postgres:password@localhost:5432/yaci

# Enable debug logging
DEBUG=false