# Yaci Indexer Configuration - Manifest Network Mainnet

# === Chain Configuration ===
CHAIN_GRPC_ENDPOINT=nodes.chandrastation.com:9090
CHAIN_ID=manifest-1

# === Database Configuration ===
POSTGRES_CONN_STRING=postgres://yaci:CHANGEME@localhost:5432/manifest?sslmode=disable

# === Yaci Configuration (auto-read via YACI_ prefix) ===
YACI_START=0
YACI_STOP=0
YACI_LIVE=true
YACI_BLOCK_TIME=2

# === Performance Tuning ===
YACI_MAX_CONCURRENCY=200
YACI_MAX_RETRIES=5
YACI_MAX_RECV_MSG_SIZE=8388608

# === Security ===
YACI_INSECURE=false

# === Observability ===
YACI_ENABLE_PROMETHEUS=true
YACI_PROMETHEUS_ADDR=0.0.0.0:2112
YACI_LOGLEVEL=info
