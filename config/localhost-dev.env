# Yaci Indexer Configuration - Local Development

# === Chain Configuration ===
CHAIN_GRPC_ENDPOINT=localhost:9090
CHAIN_ID=manifest-local

# === Database Configuration ===
POSTGRES_CONN_STRING=postgres://postgres:foobar@localhost:5432/postgres?sslmode=disable

# === Yaci Configuration (auto-read via YACI_ prefix) ===
YACI_START=1
YACI_STOP=0
YACI_LIVE=true
YACI_BLOCK_TIME=2

# === Performance Tuning ===
YACI_MAX_CONCURRENCY=100
YACI_MAX_RETRIES=3
YACI_MAX_RECV_MSG_SIZE=4194304

# === Security ===
YACI_INSECURE=true

# === Observability ===
YACI_ENABLE_PROMETHEUS=true
YACI_PROMETHEUS_ADDR=0.0.0.0:2112
YACI_LOGLEVEL=debug
