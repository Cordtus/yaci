# Yaci Indexer Configuration
# Copy this file to /opt/yaci/config/yaci.env and customize for your environment

# === Chain Configuration ===
# gRPC endpoint of the blockchain node
CHAIN_GRPC_ENDPOINT=localhost:9090

# Chain identifier (for metrics/logging)
CHAIN_ID=manifest-1

# === Database Configuration ===
# PostgreSQL connection string
POSTGRES_CONN_STRING=postgres://postgres:password@localhost:5432/yaci?sslmode=disable

# === Yaci Configuration (auto-read via YACI_ prefix) ===
# These environment variables are automatically picked up by viper

# Block range settings (0 = auto-detect)
YACI_START=0
YACI_STOP=0

# Enable live monitoring (continuously index new blocks)
YACI_LIVE=true

# Block polling interval in seconds (when live mode is enabled)
YACI_BLOCK_TIME=2

# === Performance Tuning ===
# Maximum concurrent block requests
YACI_MAX_CONCURRENCY=100

# Maximum retries for gRPC operations
YACI_MAX_RETRIES=3

# Maximum gRPC message size in bytes (default: 4MB)
YACI_MAX_RECV_MSG_SIZE=4194304

# === Security ===
# Disable TLS and use an insecure plaintext gRPC connection (use for local/dev chains only).
# For production deployments, leave this unset or set to false.
YACI_INSECURE=false

# === Observability ===
# Enable Prometheus metrics
YACI_ENABLE_PROMETHEUS=true

# Prometheus metrics server address
YACI_PROMETHEUS_ADDR=0.0.0.0:2112

# Log level: debug|info|warn|error
YACI_LOGLEVEL=info
